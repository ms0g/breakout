all:
	MAKE.EXE clean
	TASM.EXE /ml VGA.ASM
	TCC.EXE -c -oVGACPP.OBJ VGA.CPP
	TCC.EXE -c -oGAME.OBJ GAME.CPP
	TCC.EXE -c -oKEYBRD.OBJ KEYBRD.CPP
	TCC.EXE -c -oPADDLE.OBJ PADDLE.CPP
	TCC.EXE -c -oBALL.OBJ BALL.CPP
	TCC.EXE -c -oAABB.OBJ AABB.CPP
	TCC.EXE -c -oRENDERER.OBJ RENDERER.CPP
	TCC.EXE -c -oGAMELVL.OBJ GAMELVL.CPP
	TCC.EXE -c -oLVLMNGR.OBJ LVLMNGR.CPP
	TCC.EXE -c -oUI.OBJ UI.CPP
	TCC.EXE BREAKOUT.CPP @COPTS.TXT

clean:
	DEL BREAKOUT.EXE
	DEL BREAKOUT.OBJ
	DEL VGA.OBJ
	DEL VGACPP.OBJ
	DEL GAME.OBJ
	DEL GAMELVL.OBJ
	DEL LVLMNGR.OBJ
	DEL PADDLE.OBJ
	DEL BALL.OBJ
	DEL KEYBRD.OBJ
	DEL AABB.OBJ
	DEL RENDERER.OBJ
	DEL UI.OBJ
